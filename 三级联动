		function init(){
			var province = document.getElementById('province');
			var city = document.getElementById('city');
			var square = document.getElementById('square');
			//省份
			for(var i =0; i<arr_province.length; i++){
				province.innerHTML += "<option iDex="+i+">"+ arr_province[i]+"</option>";
			}
			//城市
			var index = 0;
			for(var j =0; j<arr_city[index].length; j++){
				city.innerHTML += "<option>"+ arr_city[index][j]+"</option>";
			}
			/*区域
			for(var k = 0; k < arr_square[index].length; k++){
				for (var g = 0; g < arr_square[index][k].length; g++){
					square.innerHTML += "<option>"+ arr_square[index][k][g]+"</option>";
				}
				
			}*/
		}
		//省份事件绑定
		var Index = 0;		//记住是哪个省
		function select_change(index){
			Index = index;
			city.innerHTML = '';
			for(var j =0; j<arr_city[index].length; j++){
				city.innerHTML += "<option>"+ arr_city[index][j]+"</option>";
			}	
		}
		//城市事件绑定
		function select_change_square(index){
			square.innerHTML = '';
			for(var k = 0; k < arr_square[Index-1][index].length; k++){
				square.innerHTML += "<option>"+ arr_square[Index -1][index][k]+"</option>";
			}	
		}
